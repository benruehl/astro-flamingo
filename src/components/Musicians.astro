---
import { Image } from "astro:assets";
import PortraitGary from "../images/portrait-gary.png";
import PortraitJakob from "../images/portrait-jakob.png";
import PortraitLisa from "../images/portrait-lisa.png";
import PortraitMarcin from "../images/portrait-marcin.png";
import PortraitRalf from "../images/portrait-ralf.png";
import PortraitVanessa from "../images/portrait-vanessa.png";
import Fire from "./Fire.astro";

const musicians = [
    {
        img: PortraitLisa,
        name: "Lisa Martinez",
        role: "Vocal"
    },
    {
        img: PortraitRalf,
        name: "Ralf Kienle",
        role: "Bass, Vocal"
    },
    {
        img: PortraitVanessa,
        name: "Vanessa Chase",
        role: "Vocal"
    },
    {
        img: PortraitMarcin,
        name: "Marcin Novac",
        role: "Guitar, Vocal"
    },
    {
        img: PortraitGary,
        name: "Gary Doessel",
        role: "Keyboard"
    },
    {
        img: PortraitJakob,
        name: "Jakob Peter",
        role: "Drums"
    }
];
---

<section class="max-content-width">
    <p class="pre-heading">Die Band</p>
    <h2>Sechs Multitalente aus Berlin</h2>
    <p>
        Als <span class="accent">Wild Flamingo Coverband</span> begeistern wir
        mit unseren zwei erstklassigen Leadsängerinnen und vier Bandmitgliedern
        jedes Publikum auf Firmenparties und anderen Events.
    </p>
    <p>
        Seit mehr als zwei Jahrzehnten führen wir außerdem
        <span class="accent">monatlich 400 Gäste</span> musikalisch durch eine
        Kult-Show im legendären SO36 in Berlin.
    </p>
    <div class="musicians">
        {musicians.map((musician, i) => (
            <figure>
                <Fire animationDelay={`${i}s`}/>
                <Image src={musician.img} alt={musician.name} width={200}/>
                <figcaption>
                    <strong>{musician.name}</strong>
                    {musician.role}
                </figcaption>
            </figure>
        ))}
    </div>
</section>

<style lang="scss">
    .musicians {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(max(200px, calc((100% - 120px) / 3)), 1fr));
        gap: 60px;
        justify-items: center;
        max-width: 800px;
        margin: auto;
    }

    figure {
        margin: 0;
        position: relative;

        &::before {
            content: "";
            position: absolute;
            inset: 13px 0;
            aspect-ratio: 1 / 1;
            background: radial-gradient(
                circle at 50% 70%,
                rgba(var(--accent-alt), .3),
                rgba(var(--accent-alt), 0) 70%
            );
            border-radius: 1000px;
            z-index: -1;
        }

        @for $i from 1 through 6 {
            &:nth-child(#{$i})::before {
                animation-delay: #{$i * -1}s;
            }
        }

        img {
            border-radius: 1000px;
        }

        figcaption {
            color: rgb(var(--background));
            background:
                radial-gradient(
                    rgba(var(--accent-dark), .5) 20%,
                    transparent 20%,
                    transparent 80%,
                    rgba(var(--accent-dark), .5) 80%
                ),
                rgb(var(--accent));
            background-size: 6px 6px;
            border-top: 4px solid rgb(var(--background));
            border-radius: 8px 8px 50% 50%;
            padding: .5rem 1.2rem 1rem;
            line-height: 1;
            text-align: center;
            width: fit-content;
            margin: auto;
            margin-top: -20%;
            z-index: 1;
            position: relative;
        }

        strong {
            display: block;
        }

        .fire {
            position: absolute;
            bottom: 50px;
            left: -150px;
            z-index: -2;
        }
    }

    h2 {
        max-width: 42rem;
    }

    p {
        max-width: 42rem;
    }

    .accent {
        color: rgb(var(--accent));
    }
</style>