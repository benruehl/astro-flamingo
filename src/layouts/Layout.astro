---
import { getImage } from "astro:assets";
import sky from "../images/sky.svg";

const optimizedSky = await getImage({ src: sky });

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" style=`background-image: url(${optimizedSky.src})`>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global lang="scss">
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #200e27;
		background-size: 1000px;

		&::after {
			content: "";
			position: absolute;
			inset: 0;
			background-image: inherit;
			background-size: 1000px;
        	mask-image: radial-gradient(rgba(0, 0, 0, 0) 70%, rgba(0, 0, 0, 1) 100%);
			pointer-events: none;
		}
	}
	body {
		margin: 0;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
